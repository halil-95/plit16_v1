.herous__block
    .container
        padding: unset

.herous, .herous__right,
.herous__left, form 
    display flex
    justify-content: center
    align-items: center

.herous
    justify-content: flex-start
    align-items:flex-start
    font-family: goodPro
    display flex
    align-items: stretch
    color: white

.herous__left
    flex-direction: column
    align-items: stretch
    justify-content: space-between
    flex-grow: 3
    flex-basis: 100%
    padding: $padding
    background: $blue; 
    
.hero__text > h1
    font-size: 3em;
    line-height: 1em;
    margin-bottom: 30px;
    font-weight: bold;

.hero__subscribe > p   
    font-size: $p
    font-size: 1em;
    line-height: 1.5em;
    font-weight: 500;
    
.herous__right  
    background: $blueDark
    padding: $padding
    flex-grow: 5
    text-align: center


.herous__form   
    display flex
    flex-direction: column
    gap 16px
    padding: 5px

    h2 
        line-height: $p4

    div
        flex-basis auto
        flex-grow 1;
        flex-shrink: 1
        width 100%

        input
            width: 100%
            background: unset
            border solid 1px $white
            padding: 0 5px
            font-size: 1.1em
            color inherit
            &::placeholder
                opacity .7
                color: $white

.form__button
    text-align: left
    .button
        width: unset
        margin-left:1em 
        background $white
        color $blue
        background $white
        font-size: $p
        padding: 0 20px
        transition: color .5s, background .5s

        &:hover
            background: $red
            color: white
            border transparent

@media screen and (max-width: mobile4)
    
    .herous
        flex-wrap: wrap
        padding:$padding-desktop;

    .hero__text > h1
        font-size: 2em 

    .herous__right  
        flex-grow: 5
        form
            flex-basis: auto
            flex-grow: 1
            flex-shrink: 1

@media screen and (max-width: mobile0)
    .hero__text > h1
    .herous__right > h2 
        font-size: 1em


